{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"semi": false,
				"trailingComma": "es5",
				"bracketSpacing": true
			}
		],
		"linebreak-style": ["error", "unix"],
		"no-undef": "off",
		"no-console": "off"
	}
}
